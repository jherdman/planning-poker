{
	"name": "bun-react-template",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/index.ts",
		"build": "bun build ./public/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
		"start": "NODE_ENV=production bun src/index.ts",
		"lint": "./scripts/run_checks.sh",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"dependencies": {
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/server-timing": "^1.4.0",
		"@elysiajs/static": "^1.4.4",
		"@tanstack/react-query": "^5.90.5",
		"bun-plugin-tailwind": "^0.1.2",
		"daisyui": "^5.3.7",
		"drizzle-orm": "^0.44.6",
		"elysia": "^1.4.12",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tailwindcss": "^4.1.15",
		"wouter": "^3.7.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.7",
		"@electric-sql/pglite": "^0.3.11",
		"@types/bun": "^1.3.0",
		"@types/pg": "^8.15.5",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"drizzle-kit": "^0.31.5",
		"pg": "^8.16.3"
	},
	"overrides": {
		"esbuild": "~0.25.10"
	}
}
